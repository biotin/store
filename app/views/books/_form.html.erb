<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
</br>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
</br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: "10" %>
  </div>
</br>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
</br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
